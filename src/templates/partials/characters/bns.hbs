<div id="bns-char-{{charI}}" class="char bns-char" data-char-index="{{charI}}">
	<div class="row">
		{{! char remove column }}
		{{#unless char}}
			<div class="col-xs-12 col-md-1">
				<i class="charlist-remove fa fa-user-times text-danger fa-2x"></i>
			</div>
		{{/unless}}

		{{! inputs' column }}
		<div class="col-xs-12 col-md-7">

			{{! first row }}
			<div class="row no-gutters">
				<div class="col-xs-6">
					<div class="form-group">
						<label for="bns-char-{{charI}}-nickname">Никнейм</label>
						<br>
						{{#if char}}
							<div id="bns-char-{{charI}}-nickname" class="form-control">
								{{char.bns-char-nickname}}
							</div>
						{{else}}
							<input id="bns-char-{{charI}}-nickname" class="form-control" type="text" placeholder="Kempington">
						{{/if}}
					</div>
				</div>

				<div class="col-xs-6">
					<div class="form-group">
						<label for="bns-char-{{charI}}-renames">Ренеймы</label>
						<br>
						{{#if char}}
							<div id="bns-char-{{charI}}-renames" class="form-control">
								{{#fill char.bns-char-renames}}{{/fill}}
							</div>
						{{else}}
							<input id="bns-char-{{charI}}-renames" class="form-control" type="text" placeholder="ShiniDesu, Dopefish">
						{{/if}}
					</div>
				</div>
			</div>


			{{! second row }}
			<div class="row no-gutters">

				<div class="col-xs-5">
					<div class="form-group">
						<label for="bns-char-{{charI}}-server">Сервер</label>
						<br>
						{{#if char}}
							<div id="bns-char-{{charI}}-server" class="form-control">
								{{#capitalize char.bns-char-server}}{{/capitalize}}
							</div>
						{{else}}
							<select id="bns-char-{{charI}}-server" class="form-control">
								<option value="not-selected" selected="selected">...</option>
								<option value="агат">Агат</option>
								<option value="изумруд">Изумруд</option>
								<option value="рубин">Рубин</option>
								<option value="топаз">Топаз</option>
							</select>
						{{/if}}
					</div>
				</div>

				<div class="col-xs-4">
					<div class="form-group">
						<label for="bns-char-{{charI}}-faction">Фракция</label>
						<br>
						{{#if char}}
							<div id="bns-char-{{charI}}-faction" class="form-control">
								{{#capitalize char.bns-char-faction}}{{/capitalize}}
							</div>
						{{else}}
							<select id="bns-char-{{charI}}-faction" class="form-control">
								<option value="not-selected" selected="selected">...</option>
								<option value="мурим">Мурим</option>
								<option value="хончон">Хончон</option>
							</select>
						{{/if}}
					</div>
				</div>

				<div class="col-xs-3">
					<div class="form-group">
						<label for="bns-char-{{charI}}-level">Уровень</label>
						<br>
						{{#if char}}
							<div id="bns-char-{{charI}}-level" class="form-control">
								{{char.bns-char-level}}
							</div>
						{{else}}
							<select id="bns-char-{{charI}}-level" class="form-control">
								<option value="not-selected" selected="selected">...</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
								<option value="10">10</option>
								<option value="11">11</option>
								<option value="12">12</option>
								<option value="13">13</option>
								<option value="14">14</option>
								<option value="15">15</option>
								<option value="16">16</option>
								<option value="17">17</option>
								<option value="18">18</option>
								<option value="19">19</option>
								<option value="20">20</option>
								<option value="21">21</option>
								<option value="22">22</option>
								<option value="23">23</option>
								<option value="24">24</option>
								<option value="25">25</option>
								<option value="26">26</option>
								<option value="27">27</option>
								<option value="28">28</option>
								<option value="29">29</option>
								<option value="30">30</option>
								<option value="31">31</option>
								<option value="32">32</option>
								<option value="33">33</option>
								<option value="34">34</option>
								<option value="35">35</option>
								<option value="36">36</option>
								<option value="37">37</option>
								<option value="38">38</option>
								<option value="39">39</option>
								<option value="40">40</option>
								<option value="41">41</option>
								<option value="42">42</option>
								<option value="43">43</option>
								<option value="44">44</option>
								<option value="45">45</option>
								<option value="46">46</option>
								<option value="47">47</option>
								<option value="48">48</option>
								<option value="49">49</option>
								<option value="50">50</option>
							</select>
						{{/if}}
					</div>
				</div>

			</div>

		</div>

		{{! screenshot column }}
		<div class="col-xs-12 col-md-4">
			<div class="form-group inline-block">
				<label for="bns-char-{{charI}}-screenshot-url-charstats">Скриншот статистики персонажа</label>
				<br>
				{{#if char}}
					<a href="{{char.bns-char-screenshot-url-charstats}}" target="_blank">
						<div class="screenshot-placeholder no-border" style="background-image: url('{{char.bns-char-screenshot-url-charstats}}')"></div>
					</a>
				{{else}}
					<div class="screenshot-placeholder">
						<i class="icon fa fa-cloud-upload fa-3x"></i>
						<input id="bns-char-{{charI}}-screenshot-url-charstats" class="screenshot-url" type="text">

						<form class="screenshot-form" action="/api/post/upload" method="post" enctype="multipart/form-data">
							<input class="screenshot-fileinput" type="file" name="files[]">
						</form>
					</div>
				{{/if}}
			</div>
		</div>

	</div>
</div>
